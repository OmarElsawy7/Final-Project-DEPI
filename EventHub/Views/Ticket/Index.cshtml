@{
    ViewBag.Title = "Ticket - EventHub";
}
@section Keys {
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Events" asp-action="Index" class="active">Events</a></li>
    <li><a asp-controller="Profile" asp-action="Index">Profile</a></li>
    <li><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
    <li><a asp-controller="Login" asp-action="Index">Login</a></li>
}
@section Scripts {
    <script src="~/assets/js/ticket.js"></script>
}
@section QR {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
}
<!-- Tickets Section  -->
<section class="tickets-section">
    <div class="container">
        <div class="tickets-header fade-in">
            <h1>Your Tickets</h1>
            <p>Show these QR codes at the event entrance</p>
        </div>

        <div id="ticketsContainer" class="tickets-container"></div>
    </div>
</section>

