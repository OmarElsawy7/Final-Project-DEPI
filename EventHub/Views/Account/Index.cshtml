@using EventHub.ViewModels
@model AuthWrapperViewModel

@{
    ViewBag.Title = "Login / Register - EventHub";
}

<!-- Auth Section  -->
<section class="auth-section">
    <div class="container">
        <div class="auth-container fade-in">
            <div class="auth-tabs">
                <button class="auth-tab @(Model.ActiveTab == "login" ? "active" : "")" data-tab="login">Login</button>
                <button class="auth-tab @(Model.ActiveTab == "register" ? "active" : "")" data-tab="register">Register</button>
            </div>

            <!-- Login Form  -->
            <partial name="_LoginPartial"></partial>

            <!-- Register Form  -->
            <partial name="_RegisterPartial"></partial>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.querySelectorAll('.auth-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                const tabName = tab.dataset.tab;

                document.querySelectorAll('.auth-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.auth-form-container').forEach(f => f.classList.remove('active'));

                tab.classList.add('active');
                document.getElementById(tabName + 'Form').classList.add('active');
            });
        });
    </script>
}