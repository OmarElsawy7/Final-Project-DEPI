@using EventHub.ViewModels
@model EditProfileViewModel

@{
    ViewBag.Title = "Edit Profile - EventHub";
}

<section class="profile-section">
    <div class="container">
        <div class="profile-header fade-in">
            <div class="profile-avatar">
                @if (!string.IsNullOrEmpty(Model.CurrentPhotoPath))
                {
                    <img src="@Model.CurrentPhotoPath"
                         alt="Profile Photo"
                         style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;" />
                }
                else
                {
                    <span>@Model.FullName.ToUpper().First()</span>
                }
            </div>
            <div class="profile-info">
                <h1>Edit Your Profile</h1>
                <p>Update your personal information and profile photo.</p>
            </div>
        </div>

        <div class="dashboard-card fade-in" style="margin-top: 20px;">
            <form asp-controller="Profile"
                  asp-action="Edit"
                  method="post"
                  enctype="multipart/form-data"
                  class="edit-profile-form">

                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" style="color: firebrick"></div>

                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Your full name" />
                    <span asp-validation-for="FullName" style="color: firebrick"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="your@email.com" />
                    <span asp-validation-for="Email" style="color: firebrick"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewPhoto">New Profile Photo</label>
                    <input asp-for="NewPhoto" type="file" class="form-control" accept="image/*" />
                    <small>Upload a new profile photo (JPG, PNG, GIF)</small>
                    <span asp-validation-for="NewPhoto" style="color: firebrick"></span>
                </div>

                <div class="form-actions" style="margin-top: 15px; display:flex; gap:10px;">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
