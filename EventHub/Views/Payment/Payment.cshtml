@using EventHub.ViewModels
@model PaymentViewModel

@{
    ViewBag.Title = "Payment - EventHub";
}

<!-- Payment Section  -->
<section class="payment-section">
    <div class="container">
        <div class="payment-container fade-in">
            <div class="payment-header">
                <h1>Complete Your Payment</h1>
                <p>Secure payment powered by Visa</p>
            </div>

            <div class="payment-grid">
                <!-- Order Summary  -->
                <div class="order-summary-card slide-up">
                    <h2>Order Summary</h2>
                    <div class="order-details">
                        <div class="order-item">
                            <h3>@Model.EventName</h3>
                            <div class="order-item-details">
                                <p>📅 @Model.EventDate.ToString("dddd, MMM dd yyyy - HH:mm")</p>
                                <p>📍 @Model.Location</p>
                                <p>👤 @ViewBag.FullName</p>
                            </div>
                        </div>
                    </div>

                    <div class="order-breakdown">
                        <div class="order-line"><span>Ticket Price:</span> <span>@Model.UnitPrice.ToString("0.00")</span></div>
                        <div class="order-line"><span>Quantity:</span> <span>×@Model.Quantity</span></div>
                        <div class="order-line"><span>Service Fee:</span> <span>@((Model.TotalAmount * 0.05m).ToString("C"))</span></div>

                        <div class="order-line order-total">
                            <span><strong>Total:</strong></span>
                            <span><strong>@((Model.TotalAmount * 1.05m).ToString("C"))</strong></span>
                        </div>
                    </div>
                </div>

                <!-- Payment Form  -->
                <div class="payment-form-card slide-up">
                    <h2>Payment Details</h2>
                    <div class="payment-method-badge">
                        <span class="visa-logo">VISA</span>
                        <span class="secure-badge">🔒 Secure Payment</span>
                    </div>

                    <form id="paymentForm" 
                          asp-controller="Payment"
                          asp-action="Purchase"
                          method="post"
                          class="payment-form">

                        @Html.AntiForgeryToken()

                        <!-- Show Validation Errors -->
                        <div class="form-group">
                            <div asp-validation-summary="All" style="color: firebrick"></div>
                        </div>

                        <!-- Hidden fields used by POST ViewModel -->
                        <input type="hidden" asp-for="EventId" />
                        <input type="hidden" asp-for="EventName" />
                        <input type="hidden" asp-for="EventDate" />
                        <input type="hidden" asp-for="Location" />
                        <input type="hidden" asp-for="UnitPrice" />
                        <input type="hidden" asp-for="Quantity" />
                        <input type="hidden" asp-for="Location" />

                        <div class="form-group">
                            <label asp-for="CardholderName"></label>
                            <input asp-for="CardholderName" class="form-control"
                                   required placeholder="John Doe" autocomplete="cc-name" />
                            <span asp-validation-for="CardholderName" style="color: firebrick"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CardNumber"></label>
                            <input asp-for="CardNumber" maxlength="16" class="form-control"
                                   required placeholder="1234 5678 9012 3456" autocomplete="cc-number" />
                            <span asp-validation-for="CardNumber" style="color: firebrick"></span>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="ExpiryDate"></label>
                                <input asp-for="ExpiryDate" maxlength="5" class="form-control"
                                       required placeholder="MM/YY" autocomplete="cc-exp" />
                                <span asp-validation-for="ExpiryDate" style="color: firebrick"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CVV"></label>
                                <input asp-for="CVV" maxlength="3" class="form-control"
                                       required placeholder="123" autocomplete="cc-csc" />
                                <span asp-validation-for="CVV" style="color: firebrick"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="BillingEmail"></label>
                            <input asp-for="BillingEmail" class="form-control"
                                   required placeholder="your@email.com" autocomplete="email" />
                            <span asp-validation-for="BillingEmail" style="color: firebrick"></span>
                        </div>

                        <div class="payment-total">
                            <span>Total Amount:</span>
                            <span class="total-price">
                                @((Model.TotalAmount * 1.05m).ToString("C"))
                            </span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-full btn-large">
                            <span id="payButtonText">Pay Now</span>
                        </button>

                        <div class="payment-security-info">
                            <p>🔒 Your payment information is encrypted and secure</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Processing Modal  -->
<div id="processingModal" class="modal">
    <div class="modal-content processing-modal">
        <div class="processing-animation">
            <div class="spinner"></div>
            <h3>Processing Payment...</h3>
            <p>Please wait while we process your transaction</p>
        </div>
    </div>
</div>

