@using EventHub.ViewModels
@model CreateAndEditEventViewModel

@{
	ViewData["Title"] = "Edit Event - EventHub";
}

<!-- Edit Event Form  -->
<div class="container">
	<div class="dashboard-card fade-in">
		<h2>Edit Event</h2>
		<form asp-action="EditEvent" class="event-form" method="post">
			<div class="form-row">
				<div class="form-group">
					<label asp-for="Name">Event Name</label>
					<input asp-for="Name" required placeholder="Summer Music Festival">
					<span asp-validation-for="Name" style="color: firebrick"></span>
				</div>
				<div class="form-group">
					<label asp-for="Date">Event Date</label>
					<input asp-for="Date" required>
					<span asp-validation-for="Date" style="color: firebrick"></span>
				</div>
			</div>
			<div class="form-row">
				<div class="form-group">
					<label asp-for="Location">Location</label>
					<input asp-for="Location" required placeholder="Central Park, NY">
					<span asp-validation-for="Location" style="color: firebrick"></span>
				</div>
				<div class="form-group">
					<label asp-for="Category">Category</label>
					<select asp-for="Category" required>
						<option value="concert">Concert</option>
						<option value="conference">Conference</option>
						<option value="workshop">Workshop</option>
						<option value="sports">Sports</option>
						<option value="festival">Festival</option>
						<option value="other">Other</option>
					</select>
					<span asp-validation-for="Category" style="color: firebrick"></span>
				</div>
			</div>
			<div class="form-row">
				<div class="form-group">
					<label asp-for="Price">Ticket Price ($)</label>
					<input asp-for="Price" required min="0" step="0.01" placeholder="50.00">
					<span asp-validation-for="Price" style="color: firebrick"></span>
				</div>
				<div class="form-group">
					<label asp-for="TotalTickets">Total Tickets</label>
					<input asp-for="TotalTickets" required min="1" placeholder="100">
					<span asp-validation-for="TotalTickets" style="color: firebrick"></span>
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Description">Description</label>
				<textarea asp-for="Description" rows="4" required placeholder="Describe your event..."></textarea>
				<span asp-validation-for="Description" style="color: firebrick"></span>
			</div>
			<button type="submit" class="btn btn-primary">Edit Event</button>
			<div class="hero-buttons">
				<a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Back</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}